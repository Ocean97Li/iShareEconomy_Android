<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="object"
                type="com.ocean.ishareeconomy_android.viewmodels.LendObjectViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size" app:srcCompat="@drawable/ic_lendobject_tool_solid"
                android:id="@+id/lendobject_type" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:background="@{object.color}"
                android:padding="@dimen/padding"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toEndOf="@+id/lendobject_type" android:layout_marginStart="8dp"
                android:id="@+id/linearLayout"
                app:layout_constraintTop_toTopOf="@+id/lendobject_type"
                app:layout_constraintBottom_toBottomOf="@+id/lendobject_type"
                app:layout_constraintEnd_toStartOf="@+id/linearLayout2" android:layout_marginEnd="8dp"
                android:gravity="fill">
            <TextView
                    android:text="@{object.data.name}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/title_text"
                    android:textSize="@dimen/title_text_size"/>
            <TextView
                    android:text="@{object.data.description}"
                    android:layout_width="match_parent"
                    android:layout_height="32dp" android:id="@+id/description_text"
                    android:textSize="@dimen/regular_text_size"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:id="@+id/linearLayout2"
                app:layout_constraintTop_toTopOf="@+id/linearLayout"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayout" android:gravity="center">
            <ImageView
                    android:layout_width="42dp"
                    android:layout_height="42dp" app:srcCompat="@drawable/ic_user_circle_solid"
                    android:id="@+id/user_image"/>
            <TextView
                    android:text="@{Integer.toString(object.data.waitingList.size)}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/users_number" android:textAlignment="center"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>